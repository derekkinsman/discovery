<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="com.siberia.discovery"
    version="0.1.0">
    <name>Discovery</name>
    <description>Cordova Kryonet Discovery Plugin</description>
    <license>Apache 2.0</license>
    <keywords>cordova, device</keywords>
    <repo></repo>
    <issue></issue>

    <js-module src="www/discovery.js" name="discovery">
        <clobbers target="Discovery" />
    </js-module>

    <!-- android -->
    <platform name="android">
      <config-file target="res/xml/config.xml" parent="/*">
        <feature name="Discovery" >
          <param name="android-package" value="com.siberia.discovery.ClientActivity"/>
          <param name="onload" value="true" />
        </feature>
      </config-file>
      
      <config-file target="AndroidManifest.xml" parent="/*">
        <uses-permission android:name="android.permission.INTERNET"/>
        <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
      </config-file>

      <source-file src="src/android/src/com/siberia/discovery/ClientActivity.java" target-dir="src/com/siberia/discovery" />
      <source-file src="src/android/src/com/siberia/discovery/RemoteActivity.java" target-dir="src/com/siberia/discovery" />
      <source-file src="src/android/src/com/siberia/discovery/util/DiscoverOUYAActivity.java" target-dir="src/com/siberia/discovery/util" />
      <source-file src="src/android/src/com/siberia/discovery/util/ServiceAdapter.java" target-dir="src/com/siberia/discovery/util" />
      <source-file src="src/android/lib/kryonet-2.21-all.jar" target-dir="libs" />
    </platform>

</plugin>
